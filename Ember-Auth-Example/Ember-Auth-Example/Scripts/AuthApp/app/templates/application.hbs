<h2>Ember.js Authentication Example</h2>

{{outlet}}

{{#if session.user}}
  <p><button {{action "logout"}}>Logout</button></p>
  <p><button {{action "expireSession"}}>Force session expiration</button></p>
{{else}}
  <p>{{#link-to "login" tagName="button" id="btnLogin"}}Login{{/link-to}}</p>
{{/if}}